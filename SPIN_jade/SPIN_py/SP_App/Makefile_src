	# FRAGS += 020_ElementStart.c
	# FRAGS += 020_find_elem_info.c
	# FRAGS += 070_commentDecl.c
	# FRAGS += 090_data.c
	# FRAGS += 100_endProlog.c
	# FRAGS += 120_externalDataEntityRef.c
	# FRAGS += 130_generalEntity.c
	# FRAGS += 140_ignoredChars.c
	# FRAGS += 150_markedSectionEnd.c
	# FRAGS += 160_markedSectionStart.c
	# FRAGS += 170_nonSgmlChar.c
	# FRAGS += 200_obj_cctr.c
	# FRAGS += 210_obj_dctr.c
	# FRAGS += 230_pi.c
	# FRAGS += 240_sdata.c
	# FRAGS += 250_startDtd.c
	# FRAGS += 260_subdocEntityRef.c
	# FRAGS += 270_errors.c
	# FRAGS += 280_set_SPIN_opt.c

	# Now you can renumber and rename the files
	# as long as they start with 3 digits
	#
	FRAGS := $(wildcard [0-9][0-9][0-9]_*.c)

	# a single CTRL-M in the file (literally)
	CR=''

$(OUT): $(FRAGS) Makefile_src
	echo "// GENERATED by a makefile with CR without LF" > $@
	@echo $(foreach f,$(FRAGS), $(CR)#include \"$(f)\" ) | tr '\015' '\012' >>$@
